datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"

}

model Artist {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  genres      String[]
  imageUrl    String[]
  audioUrl    String[]
  links       String[]
  records     Record[]
  createdAt   DateTime @default(now())
}

enum Genres {
  JAZZ
  SOUL
  EXPERIMENTAL
  BLUES
  ACOUSTIC
  CHAOS
  TRASH
  ELECTRONIC
  ALTERNATIVE
  INDIE
  POETIC
  LIVE
  AMBIENT
}

model Record {
  id          Int      @id @default(autoincrement())
  artistId    Int
  artist      Artist  @relation(fields: [artistId], references: [id])
  name        String?
  title       String
  description String
  imageUrl    String[]
  links       String[]
  createdAt   DateTime @default(now())
}

model Site {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String[]
  link        String?
  createdAt   DateTime @default(now())
}

model Design {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String[]
  link        String?
  createdAt   DateTime @default(now())
}
